<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnActionStart"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintDimensionRatio="1:1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textAppearance="@style/Theme.PassionWoman.TextAppearance.AppName"
        app:layout_constraintStart_toEndOf="@id/btnActionStart"
        app:layout_constraintEnd_toStartOf="@id/btnActionEnd"
        app:layout_goneMarginStart="@dimen/margin_default"
        app:layout_goneMarginEnd="@dimen/margin_default"
        tools:text="@string/app_name"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnActionEnd"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="1:1" />
</merge>
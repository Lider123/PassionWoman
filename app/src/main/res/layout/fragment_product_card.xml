<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/contentInsetsView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible">

            <FrameLayout
                android:id="@+id/layoutPhotos"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintDimensionRatio="3:4">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/vpPhotos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:background="@color/primaryVariant"/>

                <me.relex.circleindicator.CircleIndicator3
                    android:id="@+id/pageIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:paddingBottom="@dimen/margin_default"
                    app:ci_animator="@animator/circle_indicator_animator"
                    app:ci_gravity="center"
                    app:ci_drawable="@drawable/circle_indicator_dot"
                    app:ci_drawable_unselected="@drawable/circle_indicator_dot_unselected"
                    app:ci_height="8dp"
                    app:ci_width="8dp"
                    app:ci_margin="@dimen/margin_extra_small" />

                <!-- TODO: replace with StubView -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutEmpty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/primaryVariant"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivEmptyIcon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:tint="@color/secondary"
                        app:srcCompat="@drawable/ic_no_photos"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/tvEmptyPhotos"
                        app:layout_constraintVertical_chainStyle="packed"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvEmptyPhotos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_default"
                        android:text="@string/product_card_empty_photos"
                        android:textAlignment="center"
                        app:layout_constraintTop_toBottomOf="@id/ivEmptyIcon"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </FrameLayout>

            <ru.babaetskv.passionwoman.app.presentation.view.ToolbarView
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                app:tv_title=""
                app:tv_actionStartVisible="true"
                app:tv_actionStartSrc="@drawable/ic_back"
                app:tv_actionEndVisible="true"
                app:tv_actionEndSrc="@drawable/ic_favorites"
                app:tv_actionEndTint="@color/favorite"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDiscountPercent"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/margin_default"
                android:layout_marginEnd="@dimen/margin_default"
                android:padding="@dimen/margin_extra_small"
                android:gravity="center"
                android:background="@drawable/bg_discount"
                android:rotation="-15"
                android:visibility="gone"
                android:textColor="@color/onSecondary"
                app:layout_constraintTop_toBottomOf="@id/layoutPhotos"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                tools:text="-20%"
                tools:visibility="visible"/>

            <androidx.appcompat.widget.AppCompatRatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_default"
                android:layout_marginStart="@dimen/margin_default"
                android:max="5"
                app:layout_constraintTop_toBottomOf="@id/layoutPhotos"
                app:layout_constraintStart_toStartOf="parent"
                tools:progress="4"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvProductName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginHorizontal="@dimen/margin_default"
                android:textSize="22sp"
                app:layout_constraintTop_toBottomOf="@id/ratingBar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tvDiscountPercent"
                app:layout_goneMarginTop="@dimen/margin_default"
                tools:text="@tools:sample/lorem" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_default"
                android:textSize="26sp"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintTop_toBottomOf="@id/tvProductName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tvPriceDeleted"
                tools:text="$60" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPriceDeleted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_default"
                android:textSize="26sp"
                android:textColor="@color/hint"
                app:layout_constraintTop_toBottomOf="@id/tvProductName"
                app:layout_constraintStart_toEndOf="@id/tvPrice"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="$60" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDesription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_default"
                android:layout_marginHorizontal="@dimen/margin_default"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/tvPrice"
                tools:text="@tools:sample/lorem/random"
                tools:lines="3"
                tools:visibility="visible"/>

            <include
                android:id="@+id/layoutBrand"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginTop="@dimen/margin_default"
                android:layout_marginStart="@dimen/margin_default"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/tvDesription"
                app:layout_constraintStart_toStartOf="parent"
                layout="@layout/view_item_brand"
                tools:visibility="visible"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvColors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_default"
                android:layout_marginStart="@dimen/margin_default"
                android:text="@string/product_card_color_placeholder"
                app:layout_constraintTop_toBottomOf="@id/layoutBrand"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvColors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:paddingHorizontal="@dimen/margin_small"
                android:clipToPadding="false"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/tvColors"
                app:layout_constraintStart_toStartOf="parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="3"
                tools:listitem="@layout/view_item_product_color"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSizes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_default"
                android:layout_marginStart="@dimen/margin_default"
                android:text="@string/product_card_sizes"
                app:layout_constraintTop_toBottomOf="@id/rvColors"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSizes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:paddingHorizontal="@dimen/margin_small"
                android:clipToPadding="false"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/tvSizes"
                app:layoutManager="com.google.android.flexbox.FlexboxLayoutManager"
                tools:itemCount="10"
                tools:listitem="@layout/view_item_product_size"/>

            <androidx.constraintlayout.widget.Group
                android:id="@+id/groupSizes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="tvSizes, rvSizes"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddToCart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin_default"
                android:layout_marginHorizontal="@dimen/margin_default"
                android:enabled="false"
                app:layout_constraintTop_toBottomOf="@id/rvSizes"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0"
                style="@style/Theme.PassionWoman.Button.Colored"
                tools:enabled="true"
                tools:text="@string/product_card_add_to_cart"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <ru.babaetskv.passionwoman.app.presentation.view.ProgressView
        android:id="@id/progressView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="visible"/>

    <ru.babaetskv.passionwoman.app.presentation.view.StubView
        android:id="@id/errorView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:sv_action="@string/retry"
        app:sv_isActionVisible="true"
        app:sv_isBackVisible="true" />
</FrameLayout>
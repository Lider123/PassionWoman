<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ru.babaetskv.passionwoman.app.presentation.view.ToolbarView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutPromotions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_default"
                android:layout_marginHorizontal="@dimen/margin_default"
                android:visibility="gone"
                tools:visibility="visible">

                <androidx.cardview.widget.CardView
                    android:id="@+id/layoutPromotionsWrapper"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintDimensionRatio="7:5">
                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/vpPromotions"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:background="@tools:sample/backgrounds/scenic" />
                </androidx.cardview.widget.CardView>

                <me.relex.circleindicator.CircleIndicator3
                    android:id="@+id/pageIndicatorPromotions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:layout_gravity="bottom"
                    android:elevation="4dp"
                    app:ci_animator="@animator/circle_indicator_animator"
                    app:ci_gravity="center"
                    app:ci_drawable="@drawable/circle_indicator_dot"
                    app:ci_drawable_unselected="@drawable/circle_indicator_dot_unselected"
                    app:ci_height="8dp"
                    app:ci_width="8dp"
                    app:ci_margin="@dimen/margin_extra_small"
                    app:layout_constraintBottom_toBottomOf="@id/layoutPromotionsWrapper"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/layoutSaleProducts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvSaleProductsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_default"
                    android:layout_marginHorizontal="@dimen/margin_default"
                    android:text="@string/home_sale_products_title"
                    android:drawableEnd="@drawable/ic_forward"
                    android:drawablePadding="@dimen/margin_default"
                    android:textAppearance="@style/Typography.PassionWoman.TextAppearance.Subtitle" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvSaleProducts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/margin_default"
                    android:clipToPadding="false"
                    android:layoutAnimation="@anim/layout_fade_in"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/view_item_product" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutPopularProducts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/layoutPromotions"
                tools:visibility="visible">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvPopularProductsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_default"
                    android:layout_marginHorizontal="@dimen/margin_default"
                    android:text="@string/home_popular_products_title"
                    android:drawableEnd="@drawable/ic_forward"
                    android:drawablePadding="@dimen/margin_default"
                    android:textAppearance="@style/Typography.PassionWoman.TextAppearance.Subtitle" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPopularProducts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/margin_default"
                    android:clipToPadding="false"
                    android:layoutAnimation="@anim/layout_fade_in"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/view_item_product" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutNewProducts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvNewProductsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_default"
                    android:layout_marginHorizontal="@dimen/margin_default"
                    android:text="@string/home_new_products_title"
                    android:drawableEnd="@drawable/ic_forward"
                    android:drawablePadding="@dimen/margin_default"
                    android:textAppearance="@style/Typography.PassionWoman.TextAppearance.Subtitle" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvNewProducts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/margin_default"
                    android:clipToPadding="false"
                    android:layoutAnimation="@anim/layout_fade_in"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/view_item_product" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutBrands"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvBrandsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_default"
                    android:layout_marginHorizontal="@dimen/margin_default"
                    android:text="@string/home_brands_title"
                    android:textAppearance="@style/Typography.PassionWoman.TextAppearance.Subtitle" />

                <ru.babaetskv.passionwoman.app.presentation.view.GridRecyclerView
                    android:id="@+id/rvBrands"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_small"
                    android:clipToPadding="false"
                    android:layoutAnimation="@anim/layout_grid_fade_in_delayed"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="4"
                    tools:listitem="@layout/view_item_brand" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <ru.babaetskv.passionwoman.app.presentation.view.ErrorView
        android:id="@id/errorView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:ev_action="@string/retry"
        app:ev_isBackVisible="false" />

    <!-- TODO: think about replacement with mock view -->
    <ru.babaetskv.passionwoman.app.presentation.view.ProgressView
        android:id="@id/progressView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:visibility="visible"/>
</androidx.constraintlayout.widget.ConstraintLayout>
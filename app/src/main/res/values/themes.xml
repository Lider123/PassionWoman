<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PassionWoman" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="29">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryVariant</item>
        <item name="colorOnSecondary">@color/onSecondary</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <item name="android:windowBackground">@color/background</item>
        <item name="android:textViewStyle">@style/Widget.PassionWoman.TextView</item>
        <item name="imageButtonStyle">@style/Widget.PassionWoman.ImageButton</item>
        <item name="cardViewStyle">@style/Widget.PassionWoman.CardView</item>
        <item name="editTextStyle">@style/Widget.PassionWoman.EditText</item>
        <item name="textInputStyle">@style/Widget.PassionWoman.TextInput</item>
        <item name="coloredButtonStyle">@style/Widget.PassionWoman.Button.Colored</item>
        <item name="textButtonStyle">@style/Widget.PassionWoman.Button.Text</item>
        <item name="outlineButtonStyle">@style/Widget.PassionWoman.Button.Outline</item>
        <item name="switchStyle">@style/Widget.PassionWoman.Switch</item>
        <item name="radioButtonStyle">@style/Widget.PassionWoman.RadioButton</item>
        <item name="ratingBarStyle">@style/Widget.PassionWoman.RatingBar</item>
        <item name="checkboxStyle">@style/Widget.PassionWoman.CheckBox</item>
        <item name="android:buttonStyleToggle">@style/Widget.PassionWoman.ToggleButton</item>
        <item name="sliderStyle">@style/Widget.PassionWoman.Slider</item>
    </style>

    <style name="Theme.PassionWoman.BottomSheetDialogFragment" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/primaryVariant</item>
        <item name="android:windowAnimationStyle">@style/Animation.PassionWoman.BottomSheetDialog</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryVariant</item>
        <item name="colorOnSecondary">@color/onSecondary</item>

        <item name="android:textViewStyle">@style/Widget.PassionWoman.TextView</item>
        <item name="imageButtonStyle">@style/Widget.PassionWoman.ImageButton</item>
        <item name="cardViewStyle">@style/Widget.PassionWoman.CardView</item>
        <item name="editTextStyle">@style/Widget.PassionWoman.EditText</item>
        <item name="textInputStyle">@style/Widget.PassionWoman.TextInput</item>
        <item name="coloredButtonStyle">@style/Widget.PassionWoman.Button.Colored</item>
        <item name="textButtonStyle">@style/Widget.PassionWoman.Button.Text</item>
        <item name="outlineButtonStyle">@style/Widget.PassionWoman.Button.Outline</item>
        <item name="switchStyle">@style/Widget.PassionWoman.Switch</item>
        <item name="radioButtonStyle">@style/Widget.PassionWoman.RadioButton</item>
        <item name="ratingBarStyle">@style/Widget.PassionWoman.RatingBar</item>
        <item name="checkboxStyle">@style/Widget.PassionWoman.CheckBox</item>
        <item name="android:buttonStyleToggle">@style/Widget.PassionWoman.ToggleButton</item>
        <item name="sliderStyle">@style/Widget.PassionWoman.Slider</item>
    </style>
</resources>